<Window x:Class="LanguageSchoolERP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language School ERP" Height="720" Width="1240"
        WindowStartupLocation="CenterScreen">

    <DockPanel Background="{StaticResource Brush.PageBackground}">
        <Border DockPanel.Dock="Top" Padding="18,14" Background="{StaticResource Brush.AccentDark}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Language School ERP" Foreground="White" FontSize="21" FontWeight="SemiBold" VerticalAlignment="Center"/>

                <Grid Grid.Column="1" Margin="0,0,16,0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Database" Foreground="#DCE7F4" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="2" x:Name="DbCombo" Width="230" Height="34" VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="2" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Academic Year" Foreground="#DCE7F4" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="2" x:Name="YearCombo" Width="150" Height="34" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>

        <Grid Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource Brush.SurfaceAlt}" Padding="14" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Navigation" FontWeight="SemiBold" FontSize="15" Margin="4,2,0,14" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <Button x:Name="StudentsBtn" Content="Students" Height="40" Margin="0,0,0,10"/>
                    <Button x:Name="ProgramsBtn" Content="Programs" Height="40" Margin="0,0,0,10"/>
                    <Button x:Name="AcademicYearsBtn" Content="Academic Years" Height="40" Margin="0,0,0,10"/>
                    <Separator Margin="0,10,0,10"/>
                    <Button Content="Import (Admin)" Height="40"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="{StaticResource Brush.Surface}" Padding="18" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
