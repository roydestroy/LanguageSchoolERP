<Window x:Class="LanguageSchoolERP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ΕΥΡΩΓΝΩΣΗ ERP" Height="720" Width="1240"
        WindowStartupLocation="CenterScreen">
    <DockPanel Background="{StaticResource Brush.PageBackground}">
        <Border DockPanel.Dock="Top" Padding="18,12" Background="{StaticResource Brush.AccentDark}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="240" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image
                    Source="pack://application:,,,/Assets/Images/logo.png"
                    Height="36"
                    Stretch="Uniform"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    RenderOptions.EdgeMode="Aliased"/>




                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="YearLostRevenueText" Text="Απώλειες διακοπών: 0,00 €" Foreground="#DCE7F4" FontSize="12" Margin="0,2,0,0"/>
                    <ProgressBar x:Name="YearProgressBar" Height="8" Margin="0,4,0,0" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Λειτουργία" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox x:Name="ModeCombo" Width="140" Height="30" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="5" x:Name="RemoteDbGrid" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Βάση δεδομένων" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox x:Name="DbCombo" Width="140" Height="30" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="6" x:Name="LocalDbGrid" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Τοπική βάση" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox x:Name="LocalDbCombo" Width="140" Height="30" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="7" VerticalAlignment="Center">
                    <TextBlock Text="Ακαδημαϊκό έτος" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox x:Name="YearCombo" Width="140" Height="30" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border DockPanel.Dock="Top" Margin="18,10,18,0" Background="{StaticResource Brush.SurfaceAlt}" Padding="10" CornerRadius="10" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
            <WrapPanel Orientation="Horizontal" ItemHeight="34" VerticalAlignment="Center">
                <Button x:Name="StudentsBtn" Content="Μαθητές" Height="34" MinWidth="130" Margin="0,0,8,0"/>
                <Button x:Name="ProgramsBtn" Content="Προγράμματα" Height="34" MinWidth="130" Margin="0,0,8,0" Click="ProgramsBtn_Click"/>
                <Button x:Name="AcademicYearsBtn" Content="Ακαδημαϊκά έτη" Height="34" MinWidth="140" Margin="0,0,8,0"/>
                <Button x:Name="SettingsBtn" Content="Ρυθμίσεις" Height="34" MinWidth="120" Margin="0,0,8,0" Click="SettingsBtn_Click"/>
                <Button Content="Εισαγωγή (Διαχειριστής)" Height="34" MinWidth="170" Margin="0,0,8,0"/>
                <Button x:Name="CheckUpdatesBtn" Content="Έλεγχος ενημερώσεων" Height="34" MinWidth="170" Width="147"/>
            </WrapPanel>
        </Border>

        <Grid Margin="18,10,18,18">
            <Border Background="{StaticResource Brush.Surface}" Padding="18" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
