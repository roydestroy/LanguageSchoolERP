<Window x:Class="LanguageSchoolERP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language School ERP" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">

    <DockPanel Background="{StaticResource Brush.Background}">
        <!-- Top Bar -->
        <Border DockPanel.Dock="Top" Margin="16,16,16,0" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Language School ERP" Style="{StaticResource SectionTitleText}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock Text="Database:" Margin="0,0,6,0" VerticalAlignment="Center" Style="{StaticResource CaptionText}"/>
                    <ComboBox x:Name="DbCombo" Width="220" Margin="0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Academic Year:" Margin="0,0,6,0" VerticalAlignment="Center" Style="{StaticResource CaptionText}"/>
                    <ComboBox x:Name="YearCombo" Width="140" Margin="0"/>
                </StackPanel>

                <ToggleButton x:Name="ThemeToggle"
                              Grid.Column="3"
                              Width="110"
                              Height="36"
                              Content="Dark Mode"
                              VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Nav -->
            <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <Button x:Name="StudentsBtn" Content="Students" Height="40" Margin="0,0,0,8"/>
                    <Button x:Name="ProgramsBtn" Content="Programs" Height="40" Margin="0,0,0,8"/>
                    <Button x:Name="AcademicYearsBtn" Content="Academic Years" Height="40" Margin="0,0,0,8"/>
                    <Separator Margin="0,12"/>
                    <Button Content="Import (Admin)" Height="40" Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Border>

            <!-- Main Panel -->
            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
