<Window x:Class="LanguageSchoolERP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Language School ERP" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Top Bar -->
        <Border DockPanel.Dock="Top" Padding="12" Background="#1E1E1E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Language School ERP" Foreground="White" FontSize="18" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Database:" Foreground="White" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DbCombo" Width="220"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Academic Year:" Foreground="White" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="YearCombo" Width="140"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Nav -->
            <Border Background="#F2F2F2" Padding="10">
                <StackPanel>
                    <Button x:Name="StudentsBtn" Content="Students" Height="40" Margin="0,0,0,8"/>
                    <Button x:Name="ProgramsBtn" Content="Programs" Height="40" Margin="0,0,0,8"/>
                    <Button x:Name="AcademicYearsBtn" Content="Academic Years" Height="40" Margin="0,0,0,8"/>
                    <Separator Margin="0,10,0,10"/>
                    <Button Content="Import (Admin)" Height="40"/>
                </StackPanel>
            </Border>

            <!-- Main Panel -->
            <Border Grid.Column="1" Background="White" Padding="16">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
