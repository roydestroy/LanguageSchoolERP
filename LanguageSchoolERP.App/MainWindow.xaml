<Window x:Class="LanguageSchoolERP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ΕΥΡΩΓΝΩΣΗ ERP" Height="720" Width="1240"
        WindowStartupLocation="CenterScreen">

    <DockPanel Background="{StaticResource Brush.PageBackground}">
        <Border DockPanel.Dock="Top" Padding="18,14" Background="{StaticResource Brush.AccentDark}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="240" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ΕΥΡΩΓΝΩΣΗ ERP" Foreground="White" FontSize="21" FontWeight="SemiBold" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="YearProgressText" Text="Πρόοδος έτους: 0%" Foreground="#DCE7F4" FontSize="12"/>
                    <TextBlock x:Name="YearLostRevenueText" Text="Απώλειες διακοπών: 0,00 €" Foreground="#DCE7F4" FontSize="12" Margin="0,2,0,0"/>
                    <ProgressBar x:Name="YearProgressBar" Height="8" Margin="0,4,0,0" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock Text="Λειτουργία" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox x:Name="ModeCombo" Width="150" Height="34" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="5" x:Name="RemoteDbGrid" Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock Text="Βάση δεδομένων" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox x:Name="DbCombo" Width="150" Height="34" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="6" x:Name="LocalDbGrid" Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock Text="Τοπική βάση" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox x:Name="LocalDbCombo" Width="150" Height="34" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="7" Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock Text="Ακαδημαϊκό έτος" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox x:Name="YearCombo" Width="150" Height="34" VerticalAlignment="Center"/>
                </StackPanel>

            </Grid>
        </Border>

        <Grid Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Background="{StaticResource Brush.SurfaceAlt}" Padding="14" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Πλοήγηση" FontWeight="SemiBold" FontSize="15" Margin="4,2,0,14" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <Button x:Name="StudentsBtn" Content="Μαθητές" Height="40" Margin="0,0,0,10"/>
                    <Button x:Name="ProgramsBtn" Content="Προγράμματα" Height="40" Margin="0,0,0,10"/>
                    <Button x:Name="AcademicYearsBtn" Content="Ακαδημαϊκά έτη" Height="40" Margin="0,0,0,10"/>
                    <Separator Margin="0,10,0,10"/>
                    <Menu Margin="0,0,0,10">
                        <MenuItem Header="Επιλογές">
                            <MenuItem x:Name="StartupDefaultDbMenuItem" Header="Ορισμός Προεπιλεγμένης Βάσης"/>
                        </MenuItem>
                    </Menu>
                    <Button Content="Εισαγωγή (Διαχειριστής)" Height="40"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="{StaticResource Brush.Surface}" Padding="18" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
