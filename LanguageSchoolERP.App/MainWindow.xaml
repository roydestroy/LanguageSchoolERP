<Window x:Class="LanguageSchoolERP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ΕΥΡΩΓΝΩΣΗ ERP" Height="720" Width="1240"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="NavigationButtonStyle"
       TargetType="Button"
       BasedOn="{StaticResource {x:Type Button}}">

            <Setter Property="Background" Value="{StaticResource Brush.Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>

            <Style.Triggers>

                <!-- Hover -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

                <!-- Active -->
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentDark}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel Background="{StaticResource Brush.PageBackground}">
        <Border DockPanel.Dock="Top" Padding="18,12" Background="{StaticResource Brush.AccentDark}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="240" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image
                    Source="pack://application:,,,/Assets/Images/logo.png"
                    Height="36"
                    Stretch="Uniform"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    RenderOptions.EdgeMode="Aliased"/>




                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="YearRevenueSummaryText" Text="Εισπράξεις έτους: 0,00 € / 0,00 €" Foreground="#DCE7F4" FontSize="12" Margin="0,2,0,0"/>
                    <ProgressBar x:Name="YearProgressBar" Height="12" Margin="0,4,0,0" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Λειτουργία" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="ModeCombo" Width="140" Height="30" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="5" x:Name="RemoteDbGrid" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Βάση δεδομένων" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="DbCombo" Width="140" Height="30" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="6" x:Name="LocalDbGrid" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Τοπική βάση" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="LocalDbCombo" Width="140" Height="30" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="7" VerticalAlignment="Center">
                    <TextBlock Text="Ακαδημαϊκό έτος" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="YearCombo" Width="140" Height="30" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border DockPanel.Dock="Top" Margin="18,10,18,0" Background="{StaticResource Brush.SurfaceAlt}" Padding="10" CornerRadius="10" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
            <WrapPanel Orientation="Horizontal" ItemHeight="34" VerticalAlignment="Center">
                <Button x:Name="StudentsBtn" Content="Μαθητές" Height="34" MinWidth="130" Margin="0,0,8,0" Style="{StaticResource NavigationButtonStyle}"/>
                <Button x:Name="DailyPaymentsBtn" Content="Πληρωμές Ημέρας" Height="34" MinWidth="150" Margin="0,0,8,0" Style="{StaticResource NavigationButtonStyle}"/>
                <Button x:Name="ProgramsBtn" Content="Προγράμματα" Height="34" MinWidth="130" Margin="0,0,8,0" Style="{StaticResource NavigationButtonStyle}" Click="ProgramsBtn_Click"/>
                <Button x:Name="AcademicYearsBtn" Content="Ακαδημαϊκά Έτη" Height="34" MinWidth="140" Margin="0,0,8,0" Style="{StaticResource NavigationButtonStyle}"/>
                <Button x:Name="StatisticsBtn" Content="Στατιστικά" Height="34" MinWidth="130" Margin="0,0,8,0" Style="{StaticResource NavigationButtonStyle}"/>
                <Button x:Name="SettingsBtn" Content="Ρυθμίσεις" Height="34" MinWidth="120" Margin="0,0,8,0" Style="{StaticResource NavigationButtonStyle}" Click="SettingsBtn_Click"/>
            </WrapPanel>
        </Border>

        <Grid Margin="18,10,18,18">
            <Border Background="{StaticResource Brush.Surface}" Padding="18" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
