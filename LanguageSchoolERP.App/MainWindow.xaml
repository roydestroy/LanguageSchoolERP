<Window x:Class="LanguageSchoolERP.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ΕΥΡΩΓΝΩΣΗ ERP" Height="720" Width="1240"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="NavigationButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">

            <Setter Property="Background" Value="{StaticResource Brush.Surface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>

                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentDark}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopBarNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Background" Value="#2C5F90"/>
            <Setter Property="BorderBrush" Value="#7FA5C8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#F7FBFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="TopButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TopButtonBorder" Property="Background" Value="#3A75A8"/>
                                <Setter TargetName="TopButtonBorder" Property="BorderBrush" Value="#A7C4DE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="TopButtonBorder" Property="Background" Value="#27517A"/>
                                <Setter TargetName="TopButtonBorder" Property="BorderBrush" Value="#88A9C8"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="TopButtonBorder" Property="Background" Value="#EAF3FC"/>
                                <Setter TargetName="TopButtonBorder" Property="BorderBrush" Value="#BCD0E4"/>
                                <Setter Property="Foreground" Value="#1E4E7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopBarRoundIconButtonStyle" TargetType="Button" BasedOn="{StaticResource TopBarNavigationButtonStyle}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="TopButtonBorder"
                                Width="32"
                                Height="32"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TopButtonBorder" Property="Background" Value="#3A75A8"/>
                                <Setter TargetName="TopButtonBorder" Property="BorderBrush" Value="#A7C4DE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="TopButtonBorder" Property="Background" Value="#27517A"/>
                                <Setter TargetName="TopButtonBorder" Property="BorderBrush" Value="#88A9C8"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="TopButtonBorder" Property="Background" Value="#EAF3FC"/>
                                <Setter TargetName="TopButtonBorder" Property="BorderBrush" Value="#BCD0E4"/>
                                <Setter Property="Foreground" Value="#1E4E7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel Background="{StaticResource Brush.PageBackground}">
        <Border DockPanel.Dock="Top" Padding="18,10" Background="{StaticResource Brush.AccentDark}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="pack://application:,,,/Assets/Images/logo.png"
                       Height="36"
                       Stretch="Uniform"
                       SnapsToDevicePixels="True"
                       UseLayoutRounding="True"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       RenderOptions.EdgeMode="Aliased"/>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="YearRevenueSummaryText" Text="Εισπράξεις έτους: 0,00 € / 0,00 €" Foreground="#DCE7F4" FontSize="12" Margin="0,2,0,0"/>
                    <ProgressBar x:Name="YearProgressBar" Height="11" Margin="0,4,0,0" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>

                <WrapPanel Grid.Column="4" VerticalAlignment="Center" Margin="0,2,10,1" ItemHeight="34">
                    <Button x:Name="StudentsBtn" Content="Μαθητές" Style="{StaticResource TopBarNavigationButtonStyle}"/>
                    <Button x:Name="DailyPaymentsBtn" Content="Πληρωμές Ημέρας" Style="{StaticResource TopBarNavigationButtonStyle}" MinWidth="140"/>
                    <Button x:Name="ContactsExportBtn" Content="Εξαγωγή Επαφών" Style="{StaticResource TopBarNavigationButtonStyle}" MinWidth="140"/>
                    <Button x:Name="StatisticsBtn" Content="Στατιστικά" Style="{StaticResource TopBarNavigationButtonStyle}"/>
                    <Button x:Name="SettingsBtn" Style="{StaticResource TopBarRoundIconButtonStyle}" Margin="0" ToolTip="Ρυθμίσεις">
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                    </Button>
                </WrapPanel>

                <StackPanel x:Name="ModeGrid" Grid.Column="5" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Λειτουργία" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="ModeCombo" Width="128" Height="30" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="6" x:Name="RemoteDbGrid" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Βάση δεδομένων" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="DbCombo" Width="128" Height="30" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="7" x:Name="LocalDbGrid" Margin="0,0,12,0" VerticalAlignment="Center">
                    <TextBlock Text="Τοπική βάση" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="LocalDbCombo" Width="128" Height="30" VerticalAlignment="Center" DisplayMemberPath="Key" SelectedValuePath="Database"/>
                </StackPanel>

                <StackPanel Grid.Column="8" VerticalAlignment="Center">
                    <TextBlock Text="Ακαδημαϊκό έτος" Foreground="#DCE7F4" FontSize="12" Margin="0,0,0,3" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="YearCombo" Width="128" Height="30" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Margin="16,8,16,14">
            <Border Background="{StaticResource Brush.Surface}" Padding="14" CornerRadius="12" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </DockPanel>
</Window>
