<UserControl x:Class="LanguageSchoolERP.App.Views.AcademicYearsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Academic Years" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBox Width="180" Margin="16,0,8,0" VerticalContentAlignment="Center" Text="{Binding NewAcademicYearName, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="New Academic Year" Width="150" Margin="0,0,8,0" Command="{Binding AddAcademicYearCommand}"/>
            <Button Content="Delete" Width="90" Command="{Binding DeleteAcademicYearCommand}"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Padding="10">
            <DataGrid ItemsSource="{Binding AcademicYears}" SelectedItem="{Binding SelectedAcademicYear}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Current" Binding="{Binding IsCurrent}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
