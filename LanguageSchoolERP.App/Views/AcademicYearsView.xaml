<UserControl x:Class="LanguageSchoolERP.App.Views.AcademicYearsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Brush.SurfaceAlt}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="14" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Ακαδημαϊκά έτη" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Column="2"
                         Height="32"
                         VerticalAlignment="Center"
                         Text="{Binding NewAcademicYearName, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="4" x:Name="AddAcademicYearButton" Content="Νέο ακαδημαϊκό έτος" Width="170" Click="AddAcademicYearButton_Click" HorizontalAlignment="Right"/>
                <Button Grid.Column="6" Content="Διαγραφή" Width="95" Command="{Binding DeleteAcademicYearCommand}" Background="#A64949" BorderBrush="#8F3939" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <Border Grid.Row="1"
        BorderBrush="{StaticResource Brush.Border}"
        BorderThickness="1"
        CornerRadius="10"
        Padding="12"
        Background="White">

            <DataGrid ItemsSource="{Binding AcademicYears}"
              SelectedItem="{Binding SelectedAcademicYear}"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Όνομα" Binding="{Binding Name}" Width="*"/>

                    <DataGridCheckBoxColumn Header="Τρέχον"
                                    Binding="{Binding IsCurrent}"
                                    Width="100"
                                    HeaderStyle="{StaticResource LeftHeaderStyle}"/>
                </DataGrid.Columns>

            </DataGrid>
        </Border>
    </Grid>
</UserControl>
