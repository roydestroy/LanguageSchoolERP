<UserControl x:Class="LanguageSchoolERP.App.Views.AcademicYearsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Brush.SurfaceAlt}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="14" Margin="0,0,0,14">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Ακαδημαϊκά έτη" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Width="210" Margin="20,0,10,0" VerticalContentAlignment="Center" Text="{Binding NewAcademicYearName, UpdateSourceTrigger=PropertyChanged}"/>
                <Button x:Name="AddAcademicYearButton" Content="Νέο ακαδημαϊκό έτος" Width="170" Margin="0,0,10,0" Command="{Binding AddAcademicYearCommand}" Click="AddAcademicYearButton_Click"/>
                <Button Content="Διαγραφή" Width="95" Command="{Binding DeleteAcademicYearCommand}" Background="#A64949" BorderBrush="#8F3939"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <DataGrid ItemsSource="{Binding AcademicYears}" SelectedItem="{Binding SelectedAcademicYear}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Όνομα" Binding="{Binding Name}" Width="*"/>
                    <DataGridCheckBoxColumn Header="Τρέχον" Binding="{Binding IsCurrent}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
