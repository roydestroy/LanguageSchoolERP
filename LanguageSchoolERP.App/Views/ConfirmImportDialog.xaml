<Window x:Class="LanguageSchoolERP.App.Views.ConfirmImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Import"
        Height="245"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ΠΡΟΣΟΧΗ: Θα διαγραφούν όλα τα τοπικά δεδομένα πριν την εισαγωγή."
                   FontWeight="SemiBold"
                   Foreground="#AA2222"
                   TextWrapping="Wrap"/>

        <TextBlock Grid.Row="1"
                   Margin="0,12,0,0"
                   Text="Για επιβεβαίωση πληκτρολογήστε IMPORT:"/>

        <TextBox x:Name="ConfirmTextBox"
                 Grid.Row="2"
                 Margin="0,6,0,0"
                 TextChanged="ConfirmTextBox_OnTextChanged"/>

        <TextBlock Grid.Row="3"
                   Margin="0,8,0,0"
                   Foreground="#666"
                   Text="Η επιβεβαίωση είναι case-sensitive."/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,14,0,0">
            <Button Content="Cancel" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="100"
                    IsDefault="True"
                    IsEnabled="False"
                    Click="OkButton_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
