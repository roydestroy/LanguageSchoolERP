<UserControl x:Class="LanguageSchoolERP.App.Views.DailyPaymentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Brush.SurfaceAlt}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="14" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Πληρωμές Ημέρας" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Margin="0,4,0,0" Foreground="{StaticResource Brush.TextSecondary}" Text="Προβολή όλων των πληρωμών για την επιλεγμένη ημερομηνία."/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <DatePicker Width="160"
                                Margin="0,0,8,0"
                                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"/>
                    <Button Width="110" Margin="0,0,8,0" Content="Ανανέωση" Command="{Binding RefreshCommand}"/>
                    <Button Width="120" Content="Εκτύπωση PDF" Command="{Binding PrintCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding Payments}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          Margin="0,0,0,8">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ώρα" Binding="{Binding TimeText}" Width="90"/>
                        <DataGridTextColumn Header="Μαθητής" Binding="{Binding StudentName}" Width="*"/>
                        <DataGridTextColumn Header="Πρόγραμμα" Binding="{Binding ProgramName}" Width="180"/>
                        <DataGridTextColumn Header="Ποσό" Binding="{Binding AmountText}" Width="130"/>
                        <DataGridTextColumn Header="Μέθοδος" Binding="{Binding MethodText}" Width="160"/>
                        <DataGridTextColumn Header="Σημειώσεις" Binding="{Binding Notes}" Width="220"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding ErrorMessage}" Foreground="IndianRed" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding TotalAmountText, StringFormat=Σύνολο ημέρας: {0}}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
