<UserControl x:Class="LanguageSchoolERP.App.Views.DatabaseImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="3" Text="Εισαγωγή Βάσης" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,14"/>

                <TextBlock Grid.Row="1" Text="Πηγή" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton Content="Απομακρυσμένη DB"
                                 GroupName="ImportSource"
                                 Margin="0,0,16,0"
                                 IsChecked="{Binding IsRemoteImportSelected, Mode=TwoWay}"/>
                    <RadioButton Content="Αρχείο .bak"
                                 GroupName="ImportSource"
                                 Margin="0,0,16,0"
                                 IsChecked="{Binding IsBackupImportSelected, Mode=TwoWay}"/>
                    <RadioButton Content="Αρχείο Excel"
                                 GroupName="ImportSource"
                                 IsChecked="{Binding IsExcelImportSelected, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                    <Button Content="Εισαγωγή"
                            Width="170"
                            Height="34"
                            Margin="0,0,10,0"
                            Command="{Binding ImportCommand}"/>

                    <Button Content="Ακύρωση"
                            Width="100"
                            Height="34"
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"/>

                </StackPanel>

                <TextBlock Grid.Row="2" Text="Επιλογή Σχολής" VerticalAlignment="Center" Margin="0,14,10,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBackupImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsExcelImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <ComboBox Grid.Row="2" Grid.Column="1"
                          ItemsSource="{Binding RemoteDatabases}"
                          SelectedItem="{Binding SelectedRemoteDatabaseOption, Mode=TwoWay}"
                          DisplayMemberPath="Key"
                          Height="30"
                          VerticalContentAlignment="Center"
                          Width="240"
                          Margin="0,14,0,0"
                          HorizontalAlignment="Left">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBackupImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsExcelImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <TextBlock Grid.Row="3" Text="Εισαγωγή από .bak" VerticalAlignment="Center" Margin="0,14,10,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBackupImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,14,0,0">
                    <TextBox Width="320" Height="30" Text="{Binding BackupFilePath, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                    <Button Content="Αναζήτηση" Width="90" Height="30" Margin="8,0,0,0" Command="{Binding BrowseBackupFileCommand}"/>
                    <ComboBox Width="170" Height="30" Margin="12,0,0,0"
                              ItemsSource="{Binding LocalRestoreDatabases}"
                              SelectedItem="{Binding SelectedLocalRestoreDatabaseOption, Mode=TwoWay}"
                              DisplayMemberPath="Key"/>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBackupImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>

                <TextBlock Grid.Row="4" Text="Εισαγωγή από Excel" VerticalAlignment="Center" Margin="0,14,10,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsExcelImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,14,0,0">
                    <TextBox Width="320" Height="30" Text="{Binding SelectedExcelFilesText}" IsReadOnly="True" VerticalContentAlignment="Center"/>
                    <Button Content="Αναζήτηση" Width="100" Height="30" Margin="8,0,0,0" Command="{Binding BrowseExcelFilesCommand}"/>
                    <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <RadioButton Content="Φιλοθέη"
                                     GroupName="ExcelTargetDb"
                                     Margin="0,0,12,0"
                                     IsChecked="{Binding ExcelTargetFilotheiSelected, Mode=TwoWay}"/>
                        <RadioButton Content="Νέα Ιωνία"
                                     GroupName="ExcelTargetDb"
                                     IsChecked="{Binding ExcelTargetNeaIoniaSelected, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsExcelImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>

                <CheckBox Grid.Row="4" Grid.Column="2"
                          Content="Έλεγχος Αρχείου"
                          Margin="12,14,0,0"
                          VerticalAlignment="Center"
                          IsChecked="{Binding ExcelDryRunMode, Mode=TwoWay}">
                    <CheckBox.Style>
                        <Style TargetType="CheckBox">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsExcelImportSelected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </CheckBox.Style>
                </CheckBox>

                <TextBlock Grid.Row="6" Text="Πρόοδος" VerticalAlignment="Center" Margin="0,14,10,0"/>
                <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,14,0,0">
                    <ProgressBar Height="20" Minimum="0" Maximum="100" Value="{Binding ProgressValue}"/>
                </StackPanel>

                <TextBox Grid.Row="7"
                         Grid.ColumnSpan="3"
                         Margin="0,14,0,0"
                         Text="{Binding Log}"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Προεπιλογή βάσης" FontWeight="SemiBold" VerticalAlignment="Top" Margin="0,0,10,0"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,150,0">
                        <RadioButton Content="Φιλοθέη"
                                     GroupName="StartupDb"
                                     Margin="0,0,16,0"
                                     VerticalAlignment="Center"
                                     IsChecked="{Binding StartupFilotheiSelected, Mode=TwoWay}"/>
                        <RadioButton Content="Νέα Ιωνία"
                                     GroupName="StartupDb"
                                     VerticalAlignment="Center"
                                     IsChecked="{Binding StartupNeaIoniaSelected, Mode=TwoWay}"/>
                        <Button Content="Αποθήκευση"
                                Width="110"
                                Height="30"
                                Margin="10,0,0,0"
                                Command="{Binding SaveStartupDatabaseCommand}"/>

                        <Button x:Name="CheckUpdatesBtn"
                                Content="Έλεγχος ενημερώσεων"
                                Width="171"
                                Height="28"
                                Margin="10,0,0,0"
                                Click="CheckUpdatesBtn_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="2" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="10,8" Background="White" MinWidth="390">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.ColumnSpan="3" Text="Backups" FontWeight="SemiBold" Margin="0,0,0,6"/>

                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="Βάση:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <RadioButton Content="Φιλοθέη"
                                     GroupName="BackupDb"
                                     Margin="0,0,14,0"
                                     VerticalAlignment="Center"
                                     IsChecked="{Binding BackupFilotheiSelected, Mode=TwoWay}"/>
                        <RadioButton Content="Νέα Ιωνία"
                                     GroupName="BackupDb"
                                     VerticalAlignment="Center"
                                     IsChecked="{Binding BackupNeaIoniaSelected, Mode=TwoWay}"/>
                    </StackPanel>

                    <Button Grid.Row="1" Grid.Column="2"
                            HorizontalAlignment="Right"
                            Width="140"
                            Height="32"
                            Content="Δημιουργία Backup"
                            Command="{Binding BackupNowCommand}"/>

                    <TextBlock Grid.Row="2" Text="Τελευταίο:" VerticalAlignment="Center" Margin="0,6,6,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LastBackupText}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="0,6,8,0"/>

                    <TextBlock Grid.Row="3" Grid.ColumnSpan="3" Margin="0,6,0,0" Text="{Binding LastBackupErrorText}" Foreground="#C62828" FontSize="11" TextTrimming="CharacterEllipsis">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LastBackupErrorText}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding LastBackupErrorText}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>
