<UserControl x:Class="LanguageSchoolERP.App.Views.DatabaseImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Brush.SurfaceAlt}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="14" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Database Import" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Text="Import from Remote (_View) to local database" Margin="0,6,0,0" Foreground="#555"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Import from Remote"
                        Width="170"
                        Height="34"
                        Margin="0,0,10,0"
                        Command="{Binding ImportCommand}"/>

                <Button Grid.Column="2"
                        Content="Cancel"
                        Width="100"
                        Height="34"
                        Command="{Binding CancelCommand}"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Remote database" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding RemoteDatabases}"
                          SelectedItem="{Binding SelectedRemoteDatabaseOption, Mode=TwoWay}"
                          DisplayMemberPath="Key"
                          Height="30"
                          Width="240"
                          HorizontalAlignment="Left"/>

                <TextBlock Grid.Row="1" Text="Wipe local database first" VerticalAlignment="Center" Margin="0,14,10,0"/>
                <CheckBox Grid.Row="1" Grid.Column="1"
                          Margin="0,14,0,0"
                          IsChecked="{Binding WipeLocalFirst, Mode=TwoWay}"
                          VerticalAlignment="Center"/>

                <TextBlock Grid.Row="2" Text="Progress" VerticalAlignment="Center" Margin="0,14,10,0"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,14,0,0">
                    <ProgressBar Height="20" Minimum="0" Maximum="100" Value="{Binding ProgressValue}"/>
                    <TextBlock Margin="0,6,0,0" Text="{Binding ProgressPercent, StringFormat=Progress: {0}%}"/>
                </StackPanel>

                <TextBox Grid.Row="3"
                         Grid.ColumnSpan="2"
                         Margin="0,14,0,0"
                         Text="{Binding Log}"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </Grid>
        </Border>


        <Border Grid.Row="2" Margin="0,14,0,0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Default startup local DB" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton Content="Filothei"
                                 GroupName="StartupDb"
                                 Margin="0,0,16,0"
                                 VerticalAlignment="Center"
                                 IsChecked="{Binding StartupFilotheiSelected, Mode=TwoWay}"/>
                    <RadioButton Content="Nea Ionia"
                                 GroupName="StartupDb"
                                 VerticalAlignment="Center"
                                 IsChecked="{Binding StartupNeaIoniaSelected, Mode=TwoWay}"/>
                    <Button Content="Save"
                            Width="90"
                            Height="30"
                            Margin="20,0,0,0"
                            Command="{Binding SaveStartupDatabaseCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="3" Margin="2,10,2,0" Foreground="#777"
                   Text="Tip: when 'wipe local' is enabled, you must type IMPORT to confirm before the process starts."/>
    </Grid>
</UserControl>
