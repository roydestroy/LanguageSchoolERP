<UserControl x:Class="LanguageSchoolERP.App.Views.DatabaseImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="3" Text="Εισαγωγή Βάσης" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,14"/>

                <TextBlock Grid.Row="1" Text="Απομακρυσμένη Βάση" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Row="1" Grid.Column="1"
                          ItemsSource="{Binding RemoteDatabases}"
                          SelectedItem="{Binding SelectedRemoteDatabaseOption, Mode=TwoWay}"
                          DisplayMemberPath="Key"
                          Height="30"
                          Width="240"
                          HorizontalAlignment="Left"/>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                    <Button Content="Εισαγωγή"
                            Width="170"
                            Height="34"
                            Margin="0,0,10,0"
                            Command="{Binding ImportCommand}"/>

                    <Button Content="Ακύρωση"
                            Width="100"
                            Height="34"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>

                <TextBlock Grid.Row="2" Text="Διαγραφή τοπικής βάσης" VerticalAlignment="Center" Margin="0,14,10,0"/>
                <CheckBox Grid.Row="2" Grid.Column="1"
                          Margin="0,14,0,0"
                          IsChecked="{Binding WipeLocalFirst, Mode=TwoWay}"
                          VerticalAlignment="Center"/>

                <TextBlock Grid.Row="3" Text="Πρόοδος" VerticalAlignment="Center" Margin="0,14,10,0"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,14,0,0">
                    <ProgressBar Height="20" Minimum="0" Maximum="100" Value="{Binding ProgressValue}"/>
                    <TextBlock Margin="0,6,0,0" Text="{Binding ProgressPercent, StringFormat=Progress: {0}%}"/>
                </StackPanel>

                <TextBox Grid.Row="4"
                         Grid.ColumnSpan="3"
                         Margin="0,14,0,0"
                         Text="{Binding Log}"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Margin="0,14,0,0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Προεπιλεγμένη τοπική βάση" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton Content="Φιλοθέη"
                                 GroupName="StartupDb"
                                 Margin="0,0,16,0"
                                 VerticalAlignment="Center"
                                 IsChecked="{Binding StartupFilotheiSelected, Mode=TwoWay}"/>
                    <RadioButton Content="Νέα Ιωνία"
                                 GroupName="StartupDb"
                                 VerticalAlignment="Center"
                                 IsChecked="{Binding StartupNeaIoniaSelected, Mode=TwoWay}"/>
                    <Button Content="Αποθήκευση"
                            Width="110"
                            Height="30"
                            Margin="20,0,0,0"
                            Command="{Binding SaveStartupDatabaseCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Margin="0,14,0,0" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2" Text="Backups" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Text="Last backup:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastBackupText}" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0" Text="{Binding LastBackupErrorText}" Foreground="#C62828">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LastBackupErrorText}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding LastBackupErrorText}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <Button Grid.Row="3" Grid.Column="1"
                        Margin="0,10,0,0"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Left"
                        Content="Backup now"
                        Command="{Binding BackupNowCommand}"/>
            </Grid>
        </Border>

        <TextBlock Grid.Row="3" Margin="2,10,2,0" Foreground="#777"
                   Text="Tip: όταν είναι ενεργοποιημένη η διαγραφή τοπικής βάσης, πρέπει να πληκτρολογήσετε IMPORT για να προχωρήσει η διαδικασία."/>
    </Grid>
</UserControl>
