<UserControl x:Class="LanguageSchoolERP.App.Views.ProgramsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Programs" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBox Width="260" Margin="16,0,8,0" VerticalContentAlignment="Center" Text="{Binding NewProgramName, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="New Program" Width="120" Command="{Binding AddProgramCommand}"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Padding="10">
            <ListBox ItemsSource="{Binding Programs}"/>
        </Border>
    </Grid>
</UserControl>
