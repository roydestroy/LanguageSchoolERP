<UserControl x:Class="LanguageSchoolERP.App.Views.ProgramsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource Brush.SurfaceAlt}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="14" Margin="0,0,0,14">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Programs" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Width="300" Margin="20,0,10,0" VerticalContentAlignment="Center" Text="{Binding NewProgramName, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="New Program" Width="130" Margin="0,0,10,0" Command="{Binding AddProgramCommand}"/>
                <Button Content="Delete" Width="95" Command="{Binding DeleteProgramCommand}" Background="#A64949" BorderBrush="#8F3939"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <ListBox ItemsSource="{Binding Programs}" SelectedItem="{Binding SelectedProgram, Mode=TwoWay}"/>
        </Border>
    </Grid>
</UserControl>
