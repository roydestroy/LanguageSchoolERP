<UserControl x:Class="LanguageSchoolERP.App.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.Resources>

        <!-- Center cell content -->
        <Style x:Key="CenterCellText" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Center column headers -->
        <Style x:Key="CenterHeader"
           TargetType="DataGridColumnHeader"
           BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource Brush.SurfaceAlt}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="14" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Στατιστικά ακαδημαϊκού έτους" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Margin="0,4,0,0"
                               Foreground="{StaticResource Brush.TextSecondary}"
                               Text="{Binding SelectedAcademicYear, StringFormat=Έτος: {0}}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Width="120"
                        Height="34"
                        Content="Ανανέωση"
                        Command="{Binding RefreshCommand}"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="0,0,8,0" Padding="12" Background="White" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Μαθητές" FontSize="12" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <TextBlock Text="{Binding StudentsCount}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ActiveStudentsCount, StringFormat=Ενεργοί: {0}}" Foreground="{StaticResource Brush.TextSecondary}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="0,0,8,0" Padding="12" Background="White" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Εγγραφές" FontSize="12" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <TextBlock Text="{Binding EnrollmentsCount}" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding DiscontinuedEnrollmentsCount, StringFormat=Με διακοπή: {0}}" Foreground="{StaticResource Brush.TextSecondary}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Margin="0,0,8,0" Padding="12" Background="White" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Συμφωνηθέν ποσό" FontSize="12" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <TextBlock Text="{Binding AgreementsTotal, StringFormat={}{0:0.00} €}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CollectibleTotal, StringFormat=Εισπράξιμο ποσό: {0:0.00} €}" Foreground="#2E7D32"/>
                    <TextBlock Text="Πρόοδος είσπραξης (εισπράξιμο)" Margin="0,8,0,2" FontSize="11" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <ProgressBar Height="10" Minimum="0" Maximum="100" Value="{Binding CollectibleProgressPercent}"/>
                    <TextBlock Text="{Binding LostRevenueTotal, StringFormat=Απώλειες: {0:0.00} €}" Margin="0,8,0,0" Foreground="#A64949"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Padding="12" Background="White" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Οικονομική εικόνα" FontSize="12" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <TextBlock Text="{Binding CollectedTotal, StringFormat=Εισπραχθέντα: {0:0.00} €}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding OutstandingTotal, StringFormat=Υπόλοιπο: {0:0.00} €}" Foreground="#A66F2F"/>
                    <TextBlock Text="Πρόοδος έτους (συνολικό συμφωνηθέν)" Margin="0,8,0,2" FontSize="11" Foreground="{StaticResource Brush.TextSecondary}"/>
                    <ProgressBar Height="10" Minimum="0" Maximum="100" Value="{Binding AgreementProgressPercent}"/>
                </StackPanel>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2"
                   Margin="2,0,0,8"
                   FontWeight="SemiBold"
                   Text="Κατανομή ανά πρόγραμμα"/>

        <Border Grid.Row="3" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding ProgramStatistics}"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          Margin="0,0,0,8">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Πρόγραμμα"
                        Binding="{Binding ProgramName}"
                        Width="*"/>

                        <DataGridTextColumn Header="Μαθητές"
                        Binding="{Binding StudentsCount}"
                        Width="100"
                        ElementStyle="{StaticResource CenterCellText}"
                        HeaderStyle="{StaticResource CenterHeader}"/>

                        <DataGridTextColumn Header="Εγγραφές"
                        Binding="{Binding EnrollmentsCount}"
                        Width="100"
                        ElementStyle="{StaticResource CenterCellText}"
                        HeaderStyle="{StaticResource CenterHeader}"/>

                        <DataGridTextColumn Header="Συμφωνηθέν"
                        Binding="{Binding AgreementTotal, StringFormat={}{0:0.00} €}"
                        Width="150"
                        ElementStyle="{StaticResource CenterCellText}"
                        HeaderStyle="{StaticResource CenterHeader}"/>

                        <DataGridTextColumn Header="Εισπραχθέν"
                        Binding="{Binding CollectedTotal, StringFormat={}{0:0.00} €}"
                        Width="150"
                        ElementStyle="{StaticResource CenterCellText}"
                        HeaderStyle="{StaticResource CenterHeader}"/>

                        <DataGridTextColumn Header="Υπόλοιπο"
                        Binding="{Binding OutstandingTotal, StringFormat={}{0:0.00} €}"
                        Width="130"
                        ElementStyle="{StaticResource CenterCellText}"
                        HeaderStyle="{StaticResource CenterHeader}"/>
                    </DataGrid.Columns>

                </DataGrid>
                <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="IndianRed"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
