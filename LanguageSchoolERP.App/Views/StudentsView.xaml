<UserControl x:Class="LanguageSchoolERP.App.Views.StudentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             TextOptions.TextFormattingMode="Display">
    <UserControl.Resources>
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>



        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="StatusBadgeTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>



        <Style x:Key="RoundIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RoundBorder"
                                CornerRadius="16"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RoundBorder" Property="Background" Value="#3A78AE"/>
                                <Setter TargetName="RoundBorder" Property="BorderBrush" Value="#316A99"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RoundBorder" Property="Background" Value="#2C6290"/>
                                <Setter TargetName="RoundBorder" Property="BorderBrush" Value="#26537A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExpandCaretButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="#F4F7FB"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Content" Value="▼"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="CaretBorder"
                                CornerRadius="7"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CaretBorder" Property="Background" Value="#E8EEF7"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content" Value="▲"/>
                                <Setter TargetName="CaretBorder" Property="Background" Value="#DFE9F7"/>
                                <Setter TargetName="CaretBorder" Property="BorderBrush" Value="#BFD0E6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource Brush.SurfaceAlt}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="14" Margin="0,0,0,14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Row="0" Grid.Column="0" Width="200"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding StudentStatusFilters}"
                          SelectedItem="{Binding SelectedStudentStatusFilter, Mode=TwoWay}"/>
                <ComboBox Grid.Row="0" Grid.Column="2" Width="200"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding StudentSortOptions}"
                          SelectedItem="{Binding SelectedStudentSortOption, Mode=TwoWay}"/>
                <Grid Grid.Row="0" Grid.Column="4" MinHeight="34" VerticalAlignment="Center">
                    <TextBox x:Name="StudentSearchTextBox"
                             MinHeight="34"
                             VerticalAlignment="Center"
                             Padding="10,4,30,4"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Αναζήτηση με όνομα, τηλέφωνο, ηλ. ταχυδρομείο ή πρόγραμμα"/>
                    <Popup PlacementTarget="{Binding ElementName=StudentSearchTextBox}"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           StaysOpen="False"
                           IsOpen="{Binding IsSearchSuggestionsOpen}">
                        <Border Margin="0,4,0,0"
                                Width="{Binding ElementName=StudentSearchTextBox, Path=ActualWidth}"
                                Background="White"
                                BorderBrush="{StaticResource Brush.Border}"
                                BorderThickness="1"
                                CornerRadius="8"
                                MaxHeight="220">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding SearchSuggestions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding}"
                                                    Padding="10,7"
                                                    HorizontalContentAlignment="Left"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource Brush.TextPrimary}"
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Background="Transparent"
                                                    Command="{Binding DataContext.ApplySearchSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#EAF1FA"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter Property="Background" Value="#DCE8F7"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Popup>
                    <Button Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            Click="ClearStudentSearch_Click"
                            Content="✕"
                            FontSize="11"
                            FontWeight="SemiBold"
                            ToolTip="Καθαρισμός αναζήτησης"
                            Cursor="Hand"
                            Focusable="False"
                            IsTabStop="False"
                            FocusVisualStyle="{x:Null}"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="{StaticResource Brush.TextSecondary}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=StudentSearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                <Button Grid.Row="0" Grid.Column="6" Content="&#xE710;" ToolTip="Νέος μαθητής"
                        Style="{StaticResource RoundIconButtonStyle}"
                        Command="{Binding NewStudentCommand}" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="8" Content="&#xE72C;" ToolTip="Ανανέωση"
                        Style="{StaticResource RoundIconButtonStyle}"
                        Command="{Binding RefreshCommand}" VerticalAlignment="Center"/>

                <Border Grid.Row="1" Grid.ColumnSpan="9" Margin="0,7,0,0" Padding="6,5" CornerRadius="10" Background="#F4F8FD" BorderBrush="#D8E3F3" BorderThickness="1">
                    <ItemsControl ItemsSource="{Binding ProgramFilters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton Margin="0,0,6,5"
                                              Padding="14,5"
                                              MinHeight="30"
                                              BorderThickness="1"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              Content="{Binding Name}"
                                              IsChecked="{Binding IsSelected, Mode=OneWay}"
                                              Command="{Binding DataContext.SelectProgramFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Background" Value="#F7FAFF"/>
                                            <Setter Property="BorderBrush" Value="#CDDDF1"/>
                                            <Setter Property="Foreground" Value="#285A86"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border CornerRadius="16"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1,0"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E8F1FC"/>
                                                    <Setter Property="BorderBrush" Value="#AFC8E8"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#3A78AE"/>
                                                    <Setter Property="BorderBrush" Value="#2E689A"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Background" Value="#3978AF"/>
                                                    <Setter Property="BorderBrush" Value="#2B5F8B"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
        </Border>

        <!-- List -->
        <Border Grid.Row="1" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Students}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{StaticResource Brush.Border}" BorderThickness="1" CornerRadius="10" Padding="12" Margin="0,0,0,12" Background="#FBFDFF">
                                <StackPanel>

                                    <!-- Student summary row -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="{Binding FullName}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding FullName}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding ContactLine}"
                                                           Foreground="{StaticResource Brush.TextSecondary}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding ContactLine}"/>
                                                <TextBlock Text="  •  " Foreground="#999999"/>
                                                <TextBlock Text="{Binding ActiveStatusText}" Foreground="{StaticResource Brush.TextSecondary}"/>
                                            </StackPanel>
                                            <TextBlock Margin="0,4,0,0"
                                                       Text="{Binding EnrollmentSummaryText}"
                                                       Foreground="{StaticResource Brush.TextSecondary}"
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding EnrollmentSummaryText}"/>
                                        </StackPanel>

                                        <!-- Total payment progress -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <ProgressBar Height="14" Margin="0,4,0,0" Minimum="0" Maximum="100" Value="{Binding ProgressPercent}" Foreground="{Binding ProgressBrush}"/>
                                        </StackPanel>

                                        <!-- Balance -->
                                        <StackPanel Grid.Column="2" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="Υπόλοιπο" Foreground="{StaticResource Brush.TextSecondary}" FontSize="12" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding BalanceText}" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                        </StackPanel>

                                        <!-- Centered flags -->
                                        <StackPanel Grid.ColumnSpan="8"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <Border Margin="0,0,8,0"
                                                    Style="{StaticResource StatusBadgeStyle}"
                                                    Background="{Binding OverdueBadgeBackground}"
                                                    BorderBrush="{Binding OverdueBadgeBorder}"
                                                    Visibility="{Binding OverdueBadgeVisibility}">
                                                <TextBlock Text="{Binding OverdueBadgeText}"
                                                           Style="{StaticResource StatusBadgeTextStyle}"
                                                           Foreground="{Binding OverdueBadgeForeground}"/>
                                            </Border>

                                            <Border Margin="0,0,8,0"
                                                    Style="{StaticResource StatusBadgeStyle}"
                                                    Background="{Binding PendingContractBadgeBackground}"
                                                    BorderBrush="{Binding PendingContractBadgeBorder}"
                                                    Visibility="{Binding PendingContractVisibility}">
                                                <TextBlock Text="{Binding PendingContractBadgeText}"
                                                           Style="{StaticResource StatusBadgeTextStyle}"
                                                           Foreground="{Binding PendingContractBadgeForeground}"/>
                                            </Border>

                                            <Border Style="{StaticResource StatusBadgeStyle}"
                                                    Background="{Binding StoppedBadgeBackground}"
                                                    BorderBrush="{Binding StoppedBadgeBorder}"
                                                    Visibility="{Binding StoppedBadgeVisibility}">
                                                <TextBlock Text="{Binding StoppedBadgeText}"
                                                           Style="{StaticResource StatusBadgeTextStyle}"
                                                           Foreground="{Binding StoppedBadgeForeground}"/>
                                            </Border>
                                        </StackPanel>

                                        <Button Grid.Column="6"
                                                Margin="12,0,0,0"
                                                Width="90" Height="32"
                                                Content="Άνοιγμα"
                                                Style="{StaticResource PrimaryActionButtonStyle}"
                                                Command="{Binding DataContext.OpenStudentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding StudentId}"
                                                VerticalAlignment="Center"/>

                                        <ToggleButton Grid.Column="7" Margin="12,0,0,0"
                                                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                                                      Style="{StaticResource ExpandCaretButtonStyle}"
                                                      VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Expand enrollments -->
                                    <Border Margin="0,10,0,0"
                                            BorderBrush="{StaticResource Brush.Border}" BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="10"
                                            Visibility="{Binding ExpandedVisibility}">
                                        <StackPanel>
                                            <TextBlock Text="Εγγραφές" Foreground="{StaticResource Brush.TextSecondary}" Margin="0,0,0,8"/>

                                            <ItemsControl ItemsSource="{Binding Enrollments}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,0,0,6">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel>
                                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding Details}" Foreground="{StaticResource Brush.TextSecondary}" FontSize="12"/>
                                                                <ProgressBar Height="14" Width="180" Margin="0,3,0,0" Minimum="0" Maximum="100" Value="{Binding ProgressPercent}" Foreground="{Binding ProgressBrush}" HorizontalAlignment="Left"/>
                                                            </StackPanel>

                                                            <Border Grid.Column="1"
                                                                    Margin="14,0,14,0"
                                                                    Style="{StaticResource StatusBadgeStyle}"
                                                                    Background="#FDEDED"
                                                                    BorderBrush="#F4C6C6"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Visibility="{Binding StoppedBadgeVisibility}">
                                                                <TextBlock Text="ΔΙΑΚΟΠΗ"
                                                                           Style="{StaticResource StatusBadgeTextStyle}"
                                                                           Foreground="#B12626"/>
                                                            </Border>

                                                            <Grid Grid.Column="2" Margin="14,0,0,0" MinWidth="360">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                    <TextBlock Text="{Binding AgreementText}" Margin="0,0,12,0"/>
                                                                    <TextBlock Text="{Binding PaidText}" Margin="0,0,12,0"/>
                                                                    <TextBlock Text="{Binding BalanceText}" FontWeight="SemiBold"/>
                                                                </StackPanel>

                                                                <Button Grid.Row="2"
                                                                        Margin="0,8,0,0"
                                                                        Width="120" Height="30"
                                                                        Content="Πληρωμή"
                                                                        Style="{StaticResource PrimaryActionButtonStyle}"
                                                                        Command="{Binding DataContext.QuickAddPaymentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        CommandParameter="{Binding EnrollmentId}"
                                                                        IsEnabled="{Binding CanIssuePayment}"
                                                                        HorizontalAlignment="Right"
                                                                        VerticalAlignment="Bottom"/>
                                                            </Grid>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
