<Window x:Class="LanguageSchoolERP.App.Windows.AddAcademicYearWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Νέο ακαδημαϊκό έτος"
        Height="245"
        Width="432"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Προσθήκη νέου ακαδημαϊκού έτους"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Όνομα έτους"/>
        <Grid Grid.Row="2" Margin="0,6,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="−" Width="34" Height="30" FontSize="16" Click="DecreaseIncrementButton_Click"/>

            <TextBox Grid.Column="1"
                     Margin="8,0"
                     IsReadOnly="True"
                     HorizontalContentAlignment="Center"
                     FontWeight="SemiBold"
                     Text="{Binding AcademicYearName, Mode=OneWay}"/>

            <Button Grid.Column="2" Content="+" Width="34" Height="30" FontSize="16" Click="IncreaseIncrementButton_Click"/>
        </Grid>

        <TextBlock Grid.Row="3"
                   Margin="0,8,0,0"
                   Foreground="Gray"
                   Text="{Binding IncrementLabel}"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Ακύρωση" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Προσθήκη" Width="110" IsDefault="True" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
