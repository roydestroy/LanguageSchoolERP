<Window x:Class="LanguageSchoolERP.App.Windows.CreateContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Contract" Height="620" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Contract" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Enrollment (required)"/>
                <ComboBox Margin="0,4,0,12"
                          ItemsSource="{Binding EnrollmentOptions}"
                          SelectedItem="{Binding SelectedEnrollmentOption}"/>

                <TextBlock Text="Template (required)"/>
                <ComboBox Margin="0,4,0,12"
                          ItemsSource="{Binding TemplateOptions}"
                          SelectedItem="{Binding SelectedTemplateOption}"/>

                <TextBlock Text="Created at"/>
                <DatePicker Margin="0,4,0,12" SelectedDate="{Binding CreatedAt}"/>

                <TextBlock Text="Guardian full name"/>
                <TextBox Margin="0,4,0,12" Text="{Binding GuardianFullName, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Tuition amount"/>
                <TextBox Margin="0,4,0,12" Text="{Binding TuitionAmount, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Contract start date"/>
                <DatePicker Margin="0,4,0,12" SelectedDate="{Binding ContractStartDate}"/>

                <TextBlock Text="Contract end date"/>
                <DatePicker Margin="0,4,0,12" SelectedDate="{Binding ContractEndDate}"/>

                <TextBlock Text="Notes"/>
                <TextBox Margin="0,4,0,0" Height="110"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         Text="{Binding Notes}"/>
            </StackPanel>
        </ScrollViewer>

        <DockPanel Grid.Row="2" Margin="0,14,0,0">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="IndianRed" VerticalAlignment="Center"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Cancel" Width="100" Margin="0,0,8,0" IsCancel="True"/>
                <Button Content="Save" Width="120" Command="{Binding SaveCommand}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
