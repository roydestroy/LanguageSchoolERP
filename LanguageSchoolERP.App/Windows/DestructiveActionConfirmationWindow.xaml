<Window x:Class="LanguageSchoolERP.App.Windows.DestructiveActionConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Επιβεβαίωση"
        Height="280"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderTextBlock" FontSize="18" FontWeight="SemiBold"/>

        <TextBlock Grid.Row="1"
                   x:Name="MessageTextBlock"
                   Margin="0,10,0,10"
                   TextWrapping="Wrap"/>

        <TextBlock Grid.Row="2"
                   x:Name="InstructionTextBlock"
                   Margin="0,0,0,6"
                   Foreground="#B71C1C"
                   FontWeight="SemiBold"/>

        <TextBox Grid.Row="3" x:Name="ConfirmationTextBox" VerticalContentAlignment="Center"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Ακύρωση" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Συνέχεια" Width="110" IsDefault="True" Click="ContinueButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
