<Window x:Class="LanguageSchoolERP.App.Windows.StartupDatabaseOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ορισμός Προεπιλεγμένης Βάσης"
        Height="220"
        Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Ορισμός Προεπιλεγμένης Βάσης" FontSize="16" FontWeight="SemiBold"/>
        <TextBlock Grid.Row="1" Margin="0,8,0,12" Text="Επιλέξτε ποια βάση θα ανοίγει στην εκκίνηση:" Foreground="#666"/>

        <StackPanel Grid.Row="2">
            <RadioButton x:Name="FilotheiRadio" Content="Filothei" Margin="0,0,0,8" GroupName="DefaultDatabase"/>
            <RadioButton x:Name="NeaIoniaRadio" Content="Nea Ionia" GroupName="DefaultDatabase"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Ακύρωση" Width="96" Height="32" Margin="0,0,8,0" Click="CancelClick"/>
            <Button Content="Αποθήκευση" Width="96" Height="32" Click="SaveClick"/>
        </StackPanel>
    </Grid>
</Window>
